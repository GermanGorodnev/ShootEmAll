            enemySetState(ENEMY_STATE.__WALK);
            var try = 0,
                dtw = dist / LEVEL.TILE_W;
            do
            {
                mX = target.x + irandom_range(-(dtw - 20), dtw - 20);
                mY = target.y + irandom_range(-(dtw - 20), dtw - 20);
                try++;
            } until (colPlaceFree(mX, mY, collideWith) || try &lt; 6);
