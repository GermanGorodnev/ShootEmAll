        break;    
    case 3:
        anims[ENEMY_ANIM.__IDLE] = sOctoGuardShielded;
        image_index = 1;
        //xsc = 1;
        break;    
    }
    break;
case ENEMY_WEAPON.__TAZER:
    switch (dir)
    {
    case 0:
        anims[ENEMY_ANIM.__IDLE] = sOctoGuardNoshield;
        image_index = 0;
